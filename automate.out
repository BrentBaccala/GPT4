#!/usr/bin/env python3

import time
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.firefox.options import Options
from selenium.webdriver.support import expected_conditions as EC
from selenium.webdriver.support.ui import WebDriverWait

email = "cosine@freesoft.org"

options = Options()
options.headless = False

driver = webdriver.Firefox(options=options)
driver.get("https://poe.com/")

WebDriverWait(driver, 10).until(
    EC.frame_to_be_available_and_switch_to_it((By.CSS_SELECTOR, 'iframe[title="Sign in with Google Dialog"]'))
)

continue_button = WebDriverWait(driver, 10).until(
    EC.element_to_be_clickable((By.ID, "continue"))
)
continue_button.click()

driver.switch_to.window(driver.window_handles[-1])
WebDriverWait(driver, 10).until(EC.title_is("Sign in - Google Accounts"))

email_input = driver.find_element(By.CSS_SELECTOR, 'input[type="email"]')
email_input.send_keys(email)
email_input.send_keys(Keys.RETURN)

password = input("Enter your password: ")

password_input = WebDriverWait(driver, 10).until(
    EC.presence_of_element_located((By.CSS_SELECTOR, 'input[type="password"][name="Passwd"]'))
)
password_input.send_keys(password)
password_input.send_keys(Keys.RETURN)

time.sleep(10)
driver.quit()
