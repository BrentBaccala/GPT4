#!/usr/bin/env python3

import time
import getpass
from selenium import webdriver
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC

email = "cosine@freesoft.org"

# WebDriver setup
driver = webdriver.Firefox()
driver.get("https://poe.com/")

# Click on the "Continue" button in the "Sign in with Google" popup
wait = WebDriverWait(driver, 10)
wait.until(EC.frame_to_be_available_and_switch_to_it((By.CSS_SELECTOR, 'iframe[title="Sign in with Google Dialog"]')))
continue_button = wait.until(EC.element_to_be_clickable((By.ID, "continue")))
continue_button.click()

# Switch to the new "Sign in - Google Accounts" window
wait.until(EC.new_window_is_opened)
driver.switch_to.window(driver.window_handles[-1])

# Enter email address
email_input = wait.until(EC.presence_of_element_located((By.CSS_SELECTOR, 'input[type="email"]')))
email_input.send_keys(email)
email_input.send_keys(Keys.ENTER)

# Prompt user for password
password = getpass.getpass(prompt="Enter your password: ")

# Enter the password and click "Next"
password_input = wait.until(EC.presence_of_element_located((By.CSS_SELECTOR, 'input[type="password"][name="Passwd"]')))
password_input.send_keys(password)
password_input.send_keys(Keys.ENTER)

# Click on "GPT-4"
wait.until(EC.presence_of_element_located((By.LINK_TEXT, "GPT-4"))).click()

# Enter "count from 1 to 10" in the textarea and push the send button
textarea = wait.until(EC.presence_of_element_located((By.CSS_SELECTOR, 'textarea[placeholder="Talk to GPT-4 on Poe"]')))
textarea.send_keys("count from 1 to 10")
send_button = wait.until(EC.element_to_be_clickable((By.CSS_SELECTOR, 'button[type="submit"]')))
send_button.click()

# Wait ten seconds before exiting
time.sleep(10)

driver.quit()
