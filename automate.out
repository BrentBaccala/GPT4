#!/usr/bin/env python3

import time
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.firefox.options import Options
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC

options = Options()
options.headless = False

driver = webdriver.Firefox(options=options)

driver.get("https://poe.com/")

# Switch to iframe containing the "Sign in with Google" popup
iframe = WebDriverWait(driver, 10).until(
    EC.presence_of_element_located((By.CSS_SELECTOR, 'iframe[title="Sign in with Google Dialog"]'))
)
driver.switch_to.frame(iframe)

# Click the "Continue" button
continue_button = WebDriverWait(driver, 10).until(
    EC.element_to_be_clickable((By.ID, "continue"))
)
continue_button.click()

# Switch to main content
driver.switch_to.default_content()

# Switch to the new window with the title "Sign in - Google Accounts"
WebDriverWait(driver, 10).until(EC.new_window_is_opened)
for window_handle in driver.window_handles:
    driver.switch_to.window(window_handle)
    if driver.title == "Sign in - Google Accounts":
        break

# Enter email address and click "Next"
email_input = WebDriverWait(driver, 10).until(
    EC.presence_of_element_located((By.CSS_SELECTOR, 'input[type="email"]'))
)
email_input.send_keys("cosine@freesoft.org")
email_input.send_keys(Keys.RETURN)

time.sleep(10)
driver.quit()
